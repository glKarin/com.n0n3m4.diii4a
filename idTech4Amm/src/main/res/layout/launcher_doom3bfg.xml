<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res/com.karin.idTech4Amm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.karin.idTech4Amm.widget.Divider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myapp:label="@string/doom_3_bfg"
        myapp:lineColor="@color/launcher_divider_color" />

    <CheckBox
        android:id="@+id/doom3bfg_useMediumPrecision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_medium_precision_float_in_glsl_shader_harm_r_usemediumprecision" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:text="@string/compression_texture_harm_image_usecompression" />
    <RadioGroup
        android:id="@+id/doom3bfg_useCompression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/doom3bfg_useCompression_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/disable" />
        <RadioButton
            android:id="@+id/doom3bfg_useCompression_etc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETC1" />
        <RadioButton
            android:id="@+id/doom3bfg_useCompression_etc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETC2" />
        <RadioButton
            android:id="@+id/doom3bfg_useCompression_rgba4444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RGBA4444" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/doom3bfg_useCompressionCache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cache_compression_texture_harm_image_usecompressioncache" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="Renderer backend" />
    <RadioGroup
            android:id="@+id/doom3bfg_rendererBackend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RadioButton
                android:id="@+id/doom3bfg_rendererBackend_opengles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="OpenGL ES" />
        <RadioButton
                android:id="@+id/doom3bfg_rendererBackend_vulkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vulkan" />
    </RadioGroup>

</LinearLayout>