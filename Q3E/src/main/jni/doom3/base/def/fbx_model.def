// fbx binary/ascii static model
entityDef test_fbx_static_model {
	"inherit" "func_static"
	"model" "models/fbx/test_static_mesh.fbx"
}

// fbx binary/ascii animation model
// 1. md5 animation model
model test_fbx_animation_model {
	mesh "models/fbx/test_animation_mesh.md5mesh"

	anim idle "models/fbx/anims/test_anim_idle.md5anim"
	anim stand "models/fbx/anims/test_anim_stand.md5anim"
}

// 2-a. define fbx binary/ascii to md5mesh/md5anim conversion config
entityDef models/fbx/test_animation_mesh { // name must be same as model's mesh field
    "md5convert" "1" // mark this entityDef is md5 conversion define for clean manually later by command `cleanConvertedMd5`

    "type" "fbx" // animation model type, if not set, will using mesh's extension

    // mesh. file path and name is same as md5 model, but extension is fbx binary/ascii
	"mesh" "models/fbx/test_animation_mesh.fbx" // required

	"scale" "0.3" // scale vertexes, float, default -1.0. It will not scale if less or equals than 0
	"addOrigin" "0" // prepend 'origin' bone to front, bool, default false. It is useful when no origin bone or has more than 1 root bones or root bone is not identity position/rotation
    "offset" "0 0 0" // root bone origin offset, vector, default '0 0 0'
    "rotation" "0 90 0" // root bone orient rotation, vector, default '0 0 0'. value is angle degree(-360 - 360)
    "savePath" "" // output path, string, default is empty, it will be output to same path

    // animations. file path and name is same as md5 model, only use file name and find it in fbx binary/ascii animations
	"anim idle" "models/fbx/anims/test_anim_idle"
	"anim run" "models/fbx/anims/test_anim_stand"
    // more animations
}

// 2-b define fbx binary/ascii to md5mesh/md5anim secondary conversion config, it will be used if entityDef 'models/fbx/test_animation_mesh' not found
entityDef md5convert/models/fbx/test_animation_mesh { // name must be same as 'md5convert/' + model's mesh field
    "md5convert" "1" // mark this entityDef is md5 conversion define for clean manually later by command `cleanConvertedMd5`
    "type" "fbx" // animation model type, if not set, will using mesh's extension

    // mesh. file path and name is same as md5 model, but extension is fbx binary/ascii
	"mesh" "models/fbx/test_animation_mesh.fbx" // required

	"scale" "0.5" // scale vertexes, float, default -1.0. It will not scale if less or equals than 0
	"addOrigin" "1" // prepend 'origin' bone to front, bool, default false. It is useful when no origin bone or has more than 1 root bones or root bone is not identity position/rotation
    "offset" "0 0 0" // root bone origin offset, vector, default '0 0 0'
    "rotation" "0 90 0" // root bone orient rotation, vector, default '0 0 0'. value is angle degree(-360 - 360)
    "savePath" "" // output path, string, default is empty, it will be output to same path

    // animations. file path and name is same as md5 model, only use file name and find it in fbx binary/ascii animations
	"anim idle" "models/fbx/anims/test_anim_idle"
	"anim run" "models/fbx/anims/test_anim_stand"
    // more animations
}

